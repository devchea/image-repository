<p id="notice"><%= notice %></p>

<h1>Images</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.description %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%=image_tag(image.image)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row row-cols-1 row-cols-md-2 g-4">
  
  <div class="col">
    <% @images.each do |image| %>
      <div class="card">
        <img src="<%= url_for(image.image) %>" class="card-img-top" alt="<%= image.title %>>">
        <div class="card-body">
          <h5 class="card-title"><%= image.title %></h5>
          <p class="card-text"<%= image.description %>></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

